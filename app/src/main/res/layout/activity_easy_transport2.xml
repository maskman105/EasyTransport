<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"

    android:padding="16dp"
    tools:context=".easyTransport2">

    <!-- TextView for Available Bus name -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Available Bus Details:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="30sp" />

    <!-- ListView for Bus Names with deep border and background image -->
    <ListView
        android:id="@+id/listviewBusNames"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="0dp"
        android:divider="@android:color/black"
        android:dividerHeight="1dp"
        android:background="@drawable/list_view"
        android:padding="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="4dp" />

    <!-- ListView for Bus Details, without border -->
    <ListView
        android:id="@+id/listviewBusDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:divider="@android:color/black"
        android:dividerHeight="0dp"
        android:visibility="gone"
        android:padding="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
